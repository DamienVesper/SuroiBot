{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "module": "NodeNext",
        "target": "ESNext",

        "moduleResolution": "NodeNext",

        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "drizzle.config.ts",
        "eslint.config.js"
    ],
    "exclude": ["node_modules"]
}
